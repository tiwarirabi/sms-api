{
  "name": "easydigital-sms-api",
  "version": "0.0.1",
  "description": "easydigital.com.np's sms api in one request form.",
  "scripts": {
    "precommit": "lint-staged",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,js}'; exit 0",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'; exit 0",
    "codecov": "cat coverage/*/lcov.info | codecov",
    "transpile": "tsc",
    "clean": "rimraf dist",
    "build": "NODE_ENV=production run-s clean transpile",
    "watch": "tsc --watch",
    "start": "nodemon",
    "prettify": "prettier --single-quote --write \"src/**/*.{ts,js,json}\""
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --single-quote --write",
      "tslint --fix -c tslint.json 'src/**/*.{ts,js}'; exit 0",
      "git add"
    ]
  },
  "keywords": [
    "typescript",
    "javascript",
    "node",
    "express",
    "rest",
    "api",
    "starter"
  ],
  "private": true,
  "authors": [
    "Ravi Tiwari <tiwarirabi3@gmail.com>"
  ],
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "ts-node": "^7.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/helmet": "^0.0.42",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.12.14",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "eslint": "^5.10.0",
    "istanbul": "1.1.0-alpha.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.1",
    "supertest": "^3.3.0",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  }
}
